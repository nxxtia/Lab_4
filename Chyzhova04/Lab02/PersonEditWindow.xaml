<Window x:Class="Lab02.PersonEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Person" Height="450" Width="800">
    <Grid Margin="10">

        <StackPanel>
            <TextBox x:Name="FirstNameTextBox" Text = "First Name" />
            <TextBox x:Name="LastNameTextBox" Text ="Last Name" />
            <TextBox x:Name="EmailTextBox" Text="Email" />
            <DatePicker x:Name="DateOfBirthPicker" Text="Date of Birth" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="0,10,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>